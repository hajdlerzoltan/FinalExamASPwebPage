@model UserInformationModel

<form method="post" class="form">
    <fieldset class="m-auto" style="max-width: 400px;">
        <legend>Sign In</legend>
        <div class="form-group">
            <label asp-for="UserName" class="form-label mt-4">Username</label>
            <input asp-for="UserName" type="text" class="form-control" id="UserNameInput" placeholder="Enter username">
            <span asp-validation-for="UserName" class="form-text text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Password" class="form-label mt-4">Password</label>
            <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            <span asp-validation-for="Password" class="form-text text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-4 w-100">Submit</button>
    </fieldset>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
